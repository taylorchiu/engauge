<h1>Current Lesson</h1>

{{lesson}}

<div id="current_avg">Current: {{lesson.current_avg}}</div>

	<ul>
		<li><b>Lesson Name:</b> {{lesson.name}}</li>
		<li><b>Lesson Date:</b> {{lesson.date}}</li>
		<li><b>Share this with students: </b> https://www.engaugenow.herokuapp.com/students/{{lesson.url}}</li>
		<li><b>Access code: </b>{{lesson.access_code}}</li>
		<li><b>Student Score Limit (per hour)</b> {{lesson.limit}}</li>
		<div ng-controller="ScoresCtrl">
			<li><b>Scores:</b> 
				<ul ng-repeat="score in scores">
					<li>{{score.score}}</li>
				</ul>
		</div>
	</ul>


{{lesson.comments}}


<button ng-click="deleteLesson()">Delete</button>