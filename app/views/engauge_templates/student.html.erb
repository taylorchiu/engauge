<div class="studentPage">
	<div ng-controller="ScoresCtrl">

		<div class="row" id="student_row1">
			<div class="col-md-2"></div>
			<div class="col-md-8">
				<h1>Gauge Your Understanding</h1>
				<h4>Please provide feedback on how well you understand the current lesson material:</h4>
				<h5><em>A score of 0 means "I'm totally lost" and 5 means "I got this."</em></h5>
			</div>
			<div class="col-md-2"></div>
		</div>

		
		<div class="row" id="student_row2">
			<div class="col-lg-4"></div>
			<div class="col-lg-4">
				<ul class="studentLesson">
					<li><b><span class="color">Current Lesson: </span></b>{{lesson.name}} </li>
					<li><b><span class="color">Lesson Date: </span></b>{{lesson.date}} </li>
					<li><b><span class="color">Limit (per hour) </span></b>{{lesson.limit}}</li>
					<li><b><span class="color">Most Recent Score: </span></b>{{lastScore}}<span ng-hide="lastScore">None</span></li>
				</ul>

				<span  class="score_form">
	<!-- 				<ul>
						<li>Do you understand the concepts?</li>
						<li>Can you answer questions correctly?</li>
						<li>Is the lecture engaging?</li>
					</ul> -->
					<form ng-submit="addScore()" class="addScore">
						<input ng-model="newScore.score" type="radio" value="0">0
						<input ng-model="newScore.score" type="radio" value="1">1
						<input ng-model="newScore.score" type="radio" value="2">2
						<input ng-model="newScore.score" type="radio" value="3">3
						<input ng-model="newScore.score" type="radio" value="4">4
						<input ng-model="newScore.score" type="radio" value="5">5
						<input ng-model="WHAT GOES HERE" placeholder="Access Code">
						<br>
						<button id="addLessonButton" class="btn btn-sm btn-info">Submit</button>
					</form>
				</span>
			</div>
			<div class="col-lg-4"></div>
		<br>

	</div>
</div>


